
@{
    ViewBag.Title = "Thống kê sản phẩm sản xuất theo năm";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
   
}

<h2>Thống kê sản phẩm sản xuất theo năm</h2>

<div class="row ">
    <div class="col-md-4">
        <div>
            <canvas id="myChart"></canvas>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    const ctx = document.getElementById('myChart');
    var tieude = [];
    var soluong = [];
    @foreach(var item in new WebThucPham.Models.WebThucPhamEntities().rp_SanPhamSanXuatTheoNam())
        {
            @:tieude.push(@item.NamSanXuat);
            @:soluong.push(@item.SoLuong);
        }



    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: tieude,
            datasets: [{
                label: 'Số lượng sản phẩm',
                data: soluong,
                borderWidth: 1,
                backgroundColor: 'green',
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>
